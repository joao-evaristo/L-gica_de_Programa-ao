#include <stdio.h>
int main()
{
	float slar, novo_slar;
  scanf("%f", &slar);
  if (slar<=400.00){
    novo_slar = slar * 1.15;
    printf("Novo salario: %.2f\n", novo_slar);
    printf("Reajuste ganho: %.2f\n", (novo_slar-slar));
    printf("Em percentual: 15 %%\n");
  }
  else if(slar>400 && slar<=800){
    novo_slar = slar * 1.12;
    printf("Novo salario: %.2f\n", novo_slar);
    printf("Reajuste ganho: %.2f\n", (novo_slar-slar));
    printf("Em percentual: 12 %%\n");
  }
  else if(slar>800 && slar<=1200){
    novo_slar = slar * 1.10;
    printf("Novo salario: %.2f\n", novo_slar);
    printf("Reajuste ganho: %.2f\n", (novo_slar-slar));
    printf("Em percentual: 10 %%\n");
  }
  else if(slar>1200 && slar<=2000){
    novo_slar = slar * 1.07;
    printf("Novo salario: %.2f\n", novo_slar);
    printf("Reajuste ganho: %.2f\n", (novo_slar-slar));
    printf("Em percentual: 7 %%\n");
  }
  else if(slar>2000){
    novo_slar = slar * 1.04;
    printf("Novo salario: %.2f\n", novo_slar);
    printf("Reajuste ganho: %.2f\n", (novo_slar-slar));
    printf("Em percentual: 4 %%\n");
  }
  return 0;
}
